package com.springboot.first.app;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class StudentController {

	@GetMapping("/student")
	public Student getStudent(){
		return new Student("prateek", "sharma");
		// we're returning the object here
		// but we're getting back a json
		// that is a beauty of @RestController annotation
		// as it uses @ResponseBody
		// to convert java objects into json
		// uses HTTPResponse Convertors internally
		
	}
}
